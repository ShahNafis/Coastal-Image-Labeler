{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      //"@/site/*":["src/*"],
      "@/components/*": [
        "src/components/*"
      ],
      "@/server/*": ["server/*"],
      "@/models/*": ["server/models/*"],
      "@/utils/*":["server/utils/*"],
      "@/routes/*":["server/routes/*"],
      "@/middlewares/*":["server/middlewares/*"],
      "@/controllers/*":["server/controllers/*"],
      "@/data/*":["data/*"],
      "@/interfaces/*":["interfaces/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
